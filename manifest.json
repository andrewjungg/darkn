{
  "manifest_version": 2,

  "name": "darkn",
  "description": "darkn your Messenger",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": [
        "https://messenger.com/*",
        "https://facebook.com/messages/*"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "scripts.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "darkn."
  },
  "permissions": [
    "storage"
  ]
}
