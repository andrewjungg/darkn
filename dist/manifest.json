{
  "manifest_version": 2,
  "name": "darkn",
  "description": "darkn your Messenger",
  "version": "1.0",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "darkn."
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.messenger.com/*",
        "https://www.facebook.com/messages/*"
      ],
      "css": [
        "css/darkn.min.css"
      ],
      "js": [
        "js/scripts.min.js"
      ]
    }
  ]
}
